<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TimeInPhase">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/plan_layout_tiempo"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:background="@color/azul_verde_2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/plan_edit_text_tiempo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/fondo_edit_tex"
                android:textColor="@color/color_letra_titulos"
                android:hint="Ingresa tiempo"
                android:textAlignment="center"
                android:inputType="number"
                android:textSize="15sp"
                android:textColorHint="@color/azul_verde_1"
                />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardElevation="7dp"
                card_view:cardCornerRadius="12dp"
                >

                <ImageButton

                    android:id="@+id/plan_guarda_tiepo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_timee"
                    android:background="@drawable/fondo_boton_menu_funciones"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <GridView
            android:id="@+id/gridview_info"
            android:layout_width="match_parent"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:numColumns="2"></GridView>

    </LinearLayout>




</FrameLayout>