<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/item_info_fondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/fondo_fase_plan_1"
        >

        <TextView
            android:id="@+id/item_info_porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/color_letra_titulos"
            android:fontFamily="@font/consola"
            />
        <TextView
            android:id="@+id/item_info_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Cantidad"
            android:textColor="@color/color_letra_titulos"
            android:fontFamily="@font/consola"
            />
        <TextView
            android:id="@+id/item_info_fase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FASE"
            android:textColor="@color/color_letra_titulos"
            android:fontFamily="@font/consola"
            />
    </LinearLayout>


</LinearLayout>